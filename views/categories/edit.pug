extends ../layout
block content
  form(method="post", action="/category/edit/"+category.id)
    .c-forms-form(tabindex='0')
      .c-text-singleline.c-field.c-col-1.c-sml-col-1.c-span-12.c-sml-span-12.c-required
        .c-label
          label(for='c-0-220') name
        .c-editor
          input#c-0-220(type='text', placeholder='name',name='name',class='form-control',value=category.name)
        .c-editor
          input#c-0-220(type='text', placeholder='price',name='price',class='form-control',value=category.price)
        .c-editor
          select#c-0-220.form-control(name='group')
                if(category.group)
                  option(data-icon='ti-flare', value=category.group.id) #{category.group.name}
                each group in groups
                  option(data-icon='ti-pencil', value=group.id) #{group.name}
      .c-forms-heading
        input(type="submit", value="Submit",class="btn btn-primary")
